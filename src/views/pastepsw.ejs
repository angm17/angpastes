<% let title = 'Password Protected Paste', header = true, footer = true; %>
<% include partials/head %>
	 <div class="container card border-success cont mb-md-1">
	 	<div class="card-body">
		
		<div class="row">
			<div class="col-md-6 mx-auto border rounded p-5 border-success">
				<%- messages('message', locals) %>
				<form action="/paste/<%= id %>" method="post">
					<h4 class="text-center"> <%= title %></h4>
					<div class="form-group">
						<input type="text" class="form-control" name="password" placeholder="Enter Password">
					</div>
					<div class="form-group">
						<input type="submit" value="Send" class="btn btn-success btn-block">
					</div>
				</form>
			</div>
		</div>
		</div>
	 </div>

<% include partials/footer %>