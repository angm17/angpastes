<% include partials/head %>
<% let username = '', email = ''%>
<% if (typeof form !== 'undefined'){ username = form.username; email = form.email}%>
		<div class="container">
	        <div class="row">
				<div class="col-sm-6 mx-auto">
					<div class="card mt-md-5">
						<div class="card-body">
							<h1 class="text-center"><i class="fa fa-sign-in-alt"></i>  <%= SITENAME %></h1>
							<%- messages('message', locals) %>
							<form action="/<%= type %>" method="post">
								<div class="form-group">
									<input type="text" name="username" class="form-control p-3" placeholder="Username" value="<%= username %>">
								</div>
								<% if (type === 'register') {%>
								<div class="form-group">
									<input type="email" name="email" class="form-control p-3" placeholder="Email" value="<%= email %>">
								</div>
								<%}%>
								<div class="form-group">
									<input type="password" name="password" class="form-control p-3" placeholder="Password">
								</div>
								<% if (type === 'register') {%>
								<div class="form-group">
									<input type="password" name="password2" class="form-control p-3" placeholder="Confirm Password">
								</div>
								<%}%>
								<input type="submit" class="btn btn-dark btn-lg btn-block" value="<% if (type === 'register') {%> Register <%}else if(type === 'login') {%> Login <%}%>">
							</form>
							<hr>
							<div class="text-center">
								<% if (type === 'register') {%>
								<p>Already have an account? <a href="/login">Signin</a>.</p>
								<p>Or go <a href="/">Home</a>.</p>
								<%} else if(type === 'login') { %>
								<p>Need an account? <a href="/register">Signup</a>.</p>
								<p>Or go <a href="/">Home</a>.</p>
								<%}%>
							</div>
						</div>
						<div class="card-footer">
							<div class="container text-center">
				                <span class="text-muted">
				                    <a href="https://github.com/angm17/angpastes/" target="_blank" class="link link-green font-weight-bold">
				                            AngPastes</a> Copyright &copy; 2018 - 
				                    <a href="https://github.com/angm17/" target="_blank" class="link link-green font-weight-bold">
				                    	<i class="fab fa-github-square fa-2x navicon"></i> Miguel A
				            		</a>
				                </span>
				            </div>
					     </div>
					</div>
				</div>
			</div>
        </div>
<% include partials/footer %>